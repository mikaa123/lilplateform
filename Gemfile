# Gemfile is the place to add all the dependencies. It's useful for
# working with other people.

source 'http://rubygems.org'

# We can specify groups of gems. For development, we are using the
# lilp gem and watchr
group :development do
  gem 'watchr'
  gem 'lilp'
end

# This group is for all the gems we are using for the game
group :game do
  gem 'ray'
end
